---
import ModeToggle from './ui/ModeToggle.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<header class="header">
  <div class="header__container flex justify-between">
    <div>
      <h1 class="header__title">{title}</h1>
      <p>{description}</p>
    </div>
    <ModeToggle />
  </div>
</header>
